{
  "name": "tweetyourbracket-api",
  "description": "The master and entries API for tweetyourbracket.com.",
  "version": "1.0.0",
  "author": {
    "name": "Luke Karrys",
    "email": "luke@lukekarrys.com",
    "url": "http://lukekarrys.com"
  },
  "bugs": {
    "url": "https://github.com/tweetyourbracket/api/issues"
  },
  "dependencies": {
    "@lukekarrys/entry-watcher": "^5.0.1",
    "@lukekarrys/score-watcher": "^4.0.0",
    "async": "^1.5.2",
    "boom": "^3.1.2",
    "bracket-data": "^4.0.7",
    "bucker": "^1.1.1",
    "getconfig": "^2.2.0",
    "good": "^6.6.0",
    "good-console": "^5.3.1",
    "hapi": "^13.0.0",
    "hapi-node-postgres": "^3.0.1",
    "hoek": "^3.0.4",
    "joi": "^8.0.4",
    "json-rpc2": "^1.0.2",
    "lodash": "^4.6.1",
    "pg": "^4.5.1",
    "pgboom": "^0.1.0",
    "twit": "^2.2.3",
    "yargs": "^4.2.0"
  },
  "devDependencies": {
    "@lukekarrys/eslint-config": "^2.0.12",
    "babel-eslint": "^6.0.0-beta.2",
    "bracket-generator": "^3.0.0",
    "bracket-updater": "^3.0.0",
    "bracket-validator": "^3.0.1",
    "eslint": "^2.3.0",
    "eslint-plugin-classes": "^0.1.1",
    "eslint-plugin-react": "^4.2.0",
    "git-validate": "^2.1.4",
    "npm-run-all": "^1.5.1"
  },
  "engines": {
    "node": "^5.4.0",
    "npm": "^3.3.12"
  },
  "homepage": "https://github.com/tweetyourbracket/api",
  "keywords": [
    "bracket",
    "ncaa",
    "tweetyourbracket"
  ],
  "license": "UNLICENSED",
  "main": "index.js",
  "pre-commit": [
    "lint",
    "validate"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/tweetyourbracket/api.git"
  },
  "scripts": {
    "integration:entries": "node watchers/integration/entry",
    "integration:scores": "node watchers/integration/score",
    "integration:user": "node watchers/integration/user",
    "lint": "eslint .",
    "local": "nodemon index --slow",
    "start": "node index",
    "start:entries": "node watchers/entry",
    "start:scores": "node watchers/score",
    "test": "npm run validate && npm run lint",
    "test:all:integration": "NODE_ENV=integration npm-run-all test:clean:db --parallel start \"integration:scores -- --sport=ncaam --year=2016\" \"integration:scores -- --sport=ncaaw --year=2016\" \"integration:entries -- --sport=ncaam --year=2016\" \"integration:entries -- --sport=ncaaw --year=2016\" \"integration:user -- --sport=ncaam --year=2016\" \"integration:user -- --sport=ncaaw --year=2016\"",
    "test:clean:db": "dropdb tweetyourbracket-test --if-exists && createdb tweetyourbracket-test && psql -d tweetyourbracket-test -f sql/test.sql",
    "test:entries:integration": "NODE_ENV=integration npm-run-all test:clean:db --parallel start integration:entries",
    "test:scores:integration": "NODE_ENV=integration npm-run-all test:clean:db --parallel start integration:scores",
    "validate": "npm ls"
  }
}
