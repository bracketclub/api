{
  "name": "tweetyourbracket-api",
  "description": "The master and entries API for tweetyourbracket.com.",
  "version": "1.0.0",
  "author": {
    "name": "Luke Karrys",
    "email": "luke@lukekarrys.com",
    "url": "http://lukekarrys.com"
  },
  "bugs": {
    "url": "https://github.com/tweetyourbracket/api/issues"
  },
  "dependencies": {
    "@lukekarrys/entry-watcher": "^5.0.3",
    "@lukekarrys/score-watcher": "^5.0.2",
    "async": "^1.5.2",
    "boom": "^3.1.2",
    "bracket-data": "^4.0.20",
    "bucker": "^1.1.1",
    "getconfig": "^3.0.0",
    "good": "^6.6.0",
    "good-console": "^5.3.1",
    "hapi": "^13.2.1",
    "hapi-node-postgres": "^3.0.1",
    "hoek": "^3.0.4",
    "joi": "^8.0.4",
    "json-rpc2": "^1.0.2",
    "lodash": "^4.6.1",
    "pg": "^4.5.1",
    "pgboom": "^0.1.0",
    "scores": "^3.1.1",
    "twit": "^2.2.3",
    "yargs": "^4.3.1"
  },
  "devDependencies": {
    "@lukekarrys/eslint-config": "^2.0.16",
    "babel-eslint": "^6.0.0-beta.2",
    "bracket-generator": "^3.0.0",
    "bracket-updater": "^3.1.0",
    "bracket-validator": "^3.0.1",
    "eslint": "^2.4.0",
    "eslint-plugin-classes": "^0.1.1",
    "eslint-plugin-react": "^4.2.2",
    "git-validate": "^2.1.4",
    "npm-run-all": "^1.5.3"
  },
  "engines": {
    "node": "^5.4.0",
    "npm": "^3.3.12"
  },
  "homepage": "https://github.com/tweetyourbracket/api",
  "keywords": [
    "bracket",
    "ncaa",
    "tweetyourbracket"
  ],
  "license": "UNLICENSED",
  "main": "index.js",
  "pre-commit": [
    "lint",
    "validate"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/tweetyourbracket/api.git"
  },
  "scripts": {
    "integration:entries": "node watchers/integration/entries --year=2016",
    "integration:entries:ncaam": "npm run integration:entries -- --sport=ncaam",
    "integration:entries:ncaaw": "npm run integration:entries -- --sport=ncaaw",
    "integration:scores": "node watchers/integration/scores --year=2016",
    "integration:scores:ncaam": "npm run integration:scores -- --sport=ncaam",
    "integration:scores:ncaaw": "npm run integration:scores -- --sport=ncaaw",
    "integration:users": "node watchers/integration/users --year=2016",
    "integration:users:ncaam": "npm run integration:users -- --sport=ncaam",
    "integration:users:ncaaw": "npm run integration:users -- --sport=ncaaw",
    "lint": "eslint .",
    "local": "nodemon index --slow",
    "pm2:delete": "pm2 delete pm2.json",
    "pm2:logs": "pm2 logs pm2.json",
    "pm2:restart": "pm2 restart pm2.json",
    "pm2:start": "pm2 start pm2.json",
    "pm2:stop": "pm2 stop pm2.json",
    "start": "node index",
    "start:entries": "node watchers/entries",
    "start:scores": "node watchers/scores",
    "test": "npm run validate && npm run lint",
    "test:all:integration": "NODE_ENV=integration npm-run-all test:clean:db --parallel start integration:scores:ncaam integration:scores:ncaaw integration:entries:ncaam integration:entries:ncaaw integration:users:ncaam integration:users:ncaaw",
    "test:clean:db": "dropdb tweetyourbracket-test --if-exists && createdb tweetyourbracket-test && psql -d tweetyourbracket-test -f sql/test.sql",
    "test:entries:integration": "NODE_ENV=integration npm-run-all test:clean:db --parallel start integration:entries:ncaam",
    "test:scores:integration": "NODE_ENV=integration npm-run-all test:clean:db --parallel start integration:scores:ncaam",
    "test:users:integration": "NODE_ENV=integration npm-run-all test:clean:db --parallel start integration:users:ncaam",
    "validate": "npm ls"
  }
}
