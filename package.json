  },
  "scripts": {
    "alias": "now alias `now ls bc-api | grep '^ ' | awk '{print $1}' | head -n1` bc-api",
    "clean": "now rm --yes `now ls bc-api | grep '^ ' | awk '{print $1}'  | tail -n +2 | tr '\\n' ' '`",
    "deploy": "now -e NODE_ENV=production -E .env",
    "export": "node bin/export",
    "integration": "NODE_ENV=test npm start",
    "lint": "eslint .",
    "now": "now",
    "start": "node index",
    "test": "npm run lint && npm run validate",
    "validate": "npm ls"
  }
